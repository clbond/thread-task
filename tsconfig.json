{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "noEmitHelpers": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "source",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "awesomeTypescriptLoaderOptions": {
    "emitRequireType": false,
    "useBabel": true,
    "useCache": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "index.d.ts"
  ]
}
