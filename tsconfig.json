{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "sourceRoot": "source"
  },
  "exclude": [
    "node_modules",
    "dist",
    "index.d.ts"
  ]
}
